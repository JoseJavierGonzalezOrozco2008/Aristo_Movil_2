<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Acrividades.Cobropv">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout android:id="@+id/conteo_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:id="@+id/toolbar2"
                layout="@layout/toolbar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toolbar2"
                android:orientation="horizontal"
                >

                <ScrollView
                    android:id="@+id/cbroPagos"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_15sdp">

                            <Button
                                android:id="@+id/cbroBtnEfe"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Efectivo:"
                                android:background="@drawable/button_azulcustom"
                                android:textColor="@drawable/white_text_button"
                                style="@style/boton_estilo"
                                android:textAllCaps="false"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_weight="0.28" >
                            </Button>
                            <EditText android:id="@+id/cbroEtEfe"
                                android:layout_width="0dp"
                                android:layout_weight="0.4"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:fontFamily="@font/arial"
                                android:backgroundTint="@color/aristo_azul"
                                android:textSize="@dimen/textSizeSmall"
                                android:layout_marginRight="@dimen/_3sdp"
                                android:inputType="numberDecimal"
                                android:autoSizeTextType="uniform"
                                android:lines="1" />
                            <Button
                                android:id="@+id/cbroBtnLimpia"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Limpia"
                                android:background="@drawable/button_casiagotado"
                                android:textColor="@drawable/white_text_button"
                                style="@style/boton_estilo"
                                android:textAllCaps="false"
                                android:layout_weight="0.25"
                                >
                            </Button>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/cbro20"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="match_parent"
                                android:text="20"
                                android:layout_marginTop="@dimen/_5sdp"
                                style="@style/boton_estilo"
                                android:background="@drawable/button_shape"
                                android:layout_weight="1"
                                />

                            <Button
                                android:id="@+id/cbro50"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="match_parent"
                                android:text="50"
                                android:layout_marginTop="@dimen/_5sdp"
                                style="@style/boton_estilo"
                                android:background="@drawable/button_shape"
                                android:layout_weight="1"
                                />
                            <Button
                                android:id="@+id/cbro100"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="match_parent"
                                android:text="100"
                                android:layout_marginTop="@dimen/_5sdp"
                                style="@style/boton_estilo"
                                android:background="@drawable/button_shape"
                                android:layout_weight="1"
                                />
                            <Button
                                android:id="@+id/cbro200"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_height="match_parent"
                                android:text="200"
                                style="@style/boton_estilo"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/button_shape"
                                android:layout_weight="1"
                                />
                            <Button
                                android:id="@+id/cbro500"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_height="match_parent"
                                android:text="500"
                                style="@style/boton_estilo"
                                android:background="@drawable/button_shape"
                                android:layout_weight="1"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/cbroBtnCred"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="T.Credito:"
                                style="@style/boton_estilo"
                                android:background="@drawable/button_light_blue_900"
                                android:textColor="@drawable/white_text_button"
                                android:textAllCaps="false"

                                android:layout_weight="1">
                            </Button>
                            <EditText android:id="@+id/cbroTCredito"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:fontFamily="@font/arial"
                                android:nextFocusDown="@+id/cbroTCreRef"
                                android:nextFocusRight="@+id/cbroTCreRef"
                                android:backgroundTint="@color/aristo_azul"
                                android:textSize="@dimen/textSizeSmall"
                                android:inputType="numberDecimal"
                                android:lines="1"/>

                            <Spinner
                                android:id="@+id/cbrocuentacred"
                                style="?android:attr/spinnerItemStyle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />


                            <EditText android:id="@+id/cbroTCreRef"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:fontFamily="@font/arial"
                                android:backgroundTint="@color/aristo_azul"
                                android:textSize="@dimen/textSizeSmall"
                                android:inputType="text"
                                android:nextFocusDown="@+id/cbroTCreRef"
                                android:nextFocusRight="@+id/cbroTCreRef"
                                android:nextFocusLeft="@+id/cbroTCreRef"
                                android:nextFocusUp="@+id/cbroTCreRef"
                                android:hint="Refe."
                                android:imeOptions="actionNext"
                                android:lines="1" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/cbroBtnDeb"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="T.Debito:"
                                style="@style/boton_estilo"
                                android:background="@drawable/button_amarilloacomodo"
                                android:textColor="@drawable/white_text_button"
                                android:textAllCaps="false"

                                android:layout_weight="1">
                            </Button>
                            <EditText android:id="@+id/cbroTDebito"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:fontFamily="@font/arial"
                                android:backgroundTint="@color/aristo_azul"
                                android:textSize="@dimen/textSizeSmall"
                                android:nextFocusDown="@+id/cbroTDebRef"
                                android:nextFocusRight="@+id/cbroTDebRef"
                                android:inputType="numberDecimal"
                                android:lines="1"/>

                            <Spinner
                                android:id="@+id/cbrocuentadeb"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                style="?android:attr/spinnerItemStyle"
                                android:layout_weight="1" />

                            <EditText android:id="@+id/cbroTDebRef"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:fontFamily="@font/arial"
                                android:backgroundTint="@color/aristo_azul"
                                android:textSize="@dimen/textSizeSmall"
                                android:inputType="text"
                                android:nextFocusDown="@+id/cbroTDebRef"
                                android:nextFocusRight="@+id/cbroTDebRef"
                                android:nextFocusLeft="@+id/cbroTDebRef"
                                android:nextFocusUp="@+id/cbroTDebRef"
                                android:hint="Refe."
                                android:imeOptions="actionNext"
                                android:lines="1" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:orientation="horizontal">
                            <Button
                                android:id="@+id/cbroBtnTran"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="Transfer.:"
                                android:background="@drawable/button_grismedio"
                                android:textColor="@drawable/white_text_button"
                                style="@style/boton_estilo"
                                android:textAllCaps="false"

                                android:layout_weight="1" >
                            </Button>
                            <EditText android:id="@+id/cbroTrans"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:fontFamily="@font/arial"
                                android:backgroundTint="@color/aristo_azul"
                                android:textSize="@dimen/textSizeSmall"
                                android:nextFocusDown="@+id/cbroTransRefe"
                                android:nextFocusRight="@+id/cbroTransRefe"
                                android:inputType="numberDecimal"
                                android:lines="1"/>
                            <Spinner
                                android:id="@+id/cbrocuentatran"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                style="?android:attr/spinnerItemStyle"
                                android:layout_weight="1" />
                            <EditText android:id="@+id/cbroTransRefe"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:fontFamily="@font/arial"
                                android:backgroundTint="@color/aristo_azul"
                                android:textSize="@dimen/textSizeSmall"
                                android:nextFocusDown="@+id/cbroTransRefe"
                                android:nextFocusRight="@+id/cbroTransRefe"
                                android:nextFocusLeft="@+id/cbroTransRefe"
                                android:nextFocusUp="@+id/cbroTransRefe"
                                android:inputType="text"
                                android:hint="Refe."
                                android:imeOptions="actionDone"
                                android:lines="1" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <LinearLayout
                        android:id="@+id/cbroLayCap01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:paddingHorizontal="20dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_weight="1"
                            >
                            <TextView
                                android:layout_height="match_parent"
                                android:layout_width="wrap_content"
                                android:text="Total: $"
                                android:textColor="@color/aristo_amarillo"
                                android:textSize="@dimen/textSizeMedium"
                                android:textStyle="bold"
                                />
                            <TextView android:id="@+id/cbroTotal"
                                android:layout_height="match_parent"
                                android:layout_width="wrap_content"
                                android:text="100.00"
                                android:textColor="@color/aristo_amarillo"
                                android:textSize="@dimen/textSizeMedium"
                                android:textStyle="bold"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:layout_weight="0.75"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_10sdp">
                            <Button
                                android:id="@+id/cbroPagar"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:background="@drawable/button_green"
                                android:textColor="@drawable/white_text_button"
                                android:text="Cobrar"
                                android:textSize="@dimen/textSizeSmall"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/cbroLayCap02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingHorizontal="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_height="match_parent"
                                android:layout_width="wrap_content"
                                android:text="Falta: $"
                                android:textColor="@color/aristo_verde"
                                android:textSize="@dimen/textSizeXSmall"
                                android:textStyle="bold"
                                />
                            <TextView android:id="@+id/cbroFalta"
                                android:layout_height="match_parent"
                                android:layout_width="wrap_content"
                                android:text="100.00"
                                android:textColor="@color/aristo_verde"
                                android:textSize="@dimen/textSizeXSmall"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="0.5"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_height="match_parent"
                                android:layout_width="wrap_content"
                                android:text="Cambio: $"
                                android:textColor="@color/aristo_verde"
                                android:textSize="@dimen/textSizeXSmall"
                                android:textStyle="bold"
                                />
                            <TextView android:id="@+id/cbroCambio"
                                android:layout_height="match_parent"
                                android:layout_width="wrap_content"
                                android:text="0.00"
                                android:textColor="@color/aristo_verde"
                                android:textSize="@dimen/textSizeXSmall"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/cbroLayCambio03"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/toolbar2"
                        android:orientation="vertical"
                        android:visibility="gone"
                        >
                        <TextView
                            android:id="@+id/cbroLeyendaCredito"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/textSizeBigger"
                            android:textStyle="bold"
                            android:textColor="@color/colorNegro"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <Button
                                android:id="@+id/cbroBtnRegresa"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Regresa"
                                android:layout_weight="1"
                                android:textAllCaps="false"
                                >
                            </Button>
                            <Button
                                android:id="@+id/cbroBtnCredito"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Finaliza"
                                android:layout_weight="1"
                                android:textAllCaps="false"
                                >
                            </Button>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/cbroLayCambio02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toolbar2"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <LinearLayout
                    android:id="@+id/cbroLyCambio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Cambio: $"
                        android:textColor="@color/aristo_verde"
                        android:textSize="@dimen/textSizeBigger"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/cbroCambio2"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="0.0"
                        android:textColor="@color/aristo_verde"
                        android:textSize="@dimen/textSizeBigger"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <Button
                        android:id="@+id/cbroBtnNuevo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Nueva"
                        android:textAllCaps="false"
                        android:layout_weight="1" >
                    </Button>
                    <Button
                        android:id="@+id/cbroBtnEnEspera"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="En captura"
                        android:textAllCaps="false"
                        android:layout_weight="1" >
                    </Button>
                    <Button
                        android:id="@+id/cbroBtnTicket"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Ticket"
                        android:textAllCaps="false"
                        android:layout_weight="1" >
                    </Button>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="0dp">

            <include
                android:id="@+id/Mensaje"
                layout="@layout/mensaje" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
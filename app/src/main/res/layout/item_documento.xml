<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout android:id="@+id/ViewDocumento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/venta_shape"
        android:padding="3dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtDocumentoProveedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/arial"
                android:text="Proveedor"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeXSmall" />

            <TextView
                android:id="@+id/txtDocumentoTarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/arial"
                android:text="En Tarea"
                android:textColor="@color/color2"
                android:textSize="@dimen/textSizeXSmall"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linear1Documento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtDocumentoProveedor"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/txtDocumentoFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/arial"
                    android:text="Fecha"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeXSmall" />

                <TextView
                    android:id="@+id/txtDocumentoImporte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/arial"
                    android:text="Importe"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeXSmall" />



            </LinearLayout>

            <LinearLayout android:id="@+id/linear2Documento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linear1Documento">

                <TextView
                    android:id="@+id/txtDocumentoFolio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/arial"
                    android:text="Folio"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeXSmall" />

                <TextView android:id="@+id/txtDocumentoFactura"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial"
                    android:textColor="@color/black"
                    android:text="Factura"
                    android:textSize="@dimen/textSizeXSmall"
                    android:layout_marginHorizontal="10dp"/>

                <TextView android:id="@+id/txtDocumentoPedido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial"
                    android:textColor="@color/black"
                    android:text="Pedido"
                    android:textSize="@dimen/textSizeXSmall"
                    android:layout_marginHorizontal="10dp"/>

                <TextView android:id="@+id/txtDocumentoRenglones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial"
                    android:textColor="@color/black"
                    android:text="Rengs"
                    android:textSize="@dimen/textSizeXSmall"
                    android:layout_marginHorizontal="10dp"/>
            </LinearLayout>

            <TextView android:id="@+id/txtDocumentoSurtidor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear2Documento"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/arial"
                android:text="Surtidor"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeXSmall"
                android:layout_marginHorizontal="10dp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/txtDocumentoPrioridad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear2Documento"
                android:layout_toEndOf="@+id/txtDocumentoSurtidor"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/arial"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeXSmall"
                android:visibility="gone"/>


            <Button
                android:id="@+id/btnDocumentoRecibeSurte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDocumentoProveedor"
                android:textColor="@drawable/white_text_button"
                android:layout_alignParentEnd="true"
                android:background="@drawable/button_grismedio"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:fontFamily="@font/arial"
                android:text="Recibe"
                android:textSize="@dimen/textSizeTiny" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
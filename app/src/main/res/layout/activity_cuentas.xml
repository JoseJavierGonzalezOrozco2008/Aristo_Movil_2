<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Acrividades.Cuentas">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout android:id="@+id/conteo_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:id="@+id/toolbar2"
                layout="@layout/toolbar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toolbar2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="end">

                    <Button
                        android:id="@+id/cuclNuevo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Guarda"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginRight="@dimen/_7sdp"
                        android:textColor="@drawable/white_text_button"
                        android:background="@drawable/button_green"
                        android:fontFamily="@font/arial"
                        android:textSize="@dimen/textSizeSmall"
                        android:gravity="center"
                        />
                </LinearLayout>
                <ScrollView
                    android:id="@+id/clteLyCliente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/_95sdp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:text="Nombre:"
                                android:textSize="@dimen/textSizeSmall"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/cuclNombre"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeSmall"
                                android:layout_weight="1" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/_95sdp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:text="Cuenta:"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:textSize="@dimen/textSizeSmall"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/cuclCuenta"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeSmall"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/_95sdp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:text="Teléfono:"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:textSize="@dimen/textSizeSmall"
                                android:textStyle="bold"
                                />
                            <EditText
                                android:id="@+id/clteTEl"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeSmall"
                                android:layout_weight="1" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/_95sdp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:text="Calle:"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:textSize="@dimen/textSizeSmall"
                                android:textStyle="bold"
                                />
                            <EditText
                                android:id="@+id/clteCalle"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeSmall"
                                android:layout_weight="1" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/_95sdp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:text="Núm Ext:"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:textSize="@dimen/textSizeSmall"
                                android:textStyle="bold"
                                />
                            <EditText
                                android:id="@+id/clteExt"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeSmall"
                                android:layout_weight="1" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/_95sdp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:text="Núm Int:"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:textSize="@dimen/textSizeSmall"
                                android:textStyle="bold"
                                />
                            <EditText
                                android:id="@+id/clteint"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeSmall"
                                android:layout_weight="1" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/_95sdp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:text="Referencia:"
                                android:textSize="@dimen/textSizeSmall"
                                android:textStyle="bold"
                                />
                            <EditText
                                android:id="@+id/clteRef"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeSmall"
                                android:layout_weight="1" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/_95sdp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:text="Codigo postal:"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:textSize="@dimen/textSizeSmall"
                                android:textStyle="bold"
                                />
                            <EditText
                                android:id="@+id/clteCp"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:inputType="text"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeSmall"
                                android:layout_weight="1" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/_95sdp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:text="Colonia:"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:textSize="@dimen/textSizeSmall"
                                android:textStyle="bold"
                                />
                            <Spinner
                                android:id="@+id/clteColonia"
                                style="?android:attr/spinnerItemStyle"
                                android:layout_width="0dp"
                                android:textSize="@dimen/textSizeSmall"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/_95sdp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:text="Municipio:"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:textSize="@dimen/textSizeSmall"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/clteMunicipio"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Jesus Maria"
                                android:textSize="@dimen/textSizeSmall"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="@dimen/_95sdp"
                                android:layout_height="match_parent"
                                android:gravity="center|start"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:text="Estado:"
                                android:textSize="@dimen/textSizeSmall"
                                android:textStyle="bold"
                                />
                            <TextView
                                android:id="@+id/clteEstado"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Ags"
                                android:textSize="@dimen/textSizeSmall"
                                android:textStyle="bold"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="0dp">

            <include
                android:id="@+id/Mensaje"
                layout="@layout/mensaje" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/aristo_azul">

            <TextView
                android:id="@+id/vistaTitulo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeMedium"
                android:textAlignment="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/vitaTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeSmall"
            android:fontFamily="@font/arial"
            android:gravity="center"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_15sdp">
            <TextView
                android:id="@+id/vistaCosto"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeSmall"
                android:fontFamily="@font/arial"
                android:gravity="start"
                android:text="Costo:" />


            <EditText
                android:id="@+id/editCosto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/arial"
                android:inputType="numberDecimal"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeXSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_15sdp">

            <TextView
                android:id="@+id/vistaCant"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeSmall"
                android:fontFamily="@font/arial"
                android:gravity="start"
                android:text="Cant/cargo:" />

            <EditText
                android:id="@+id/editCant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/arial"
                android:inputType="numberDecimal"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeXSmall" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_15sdp">

            <TextView
                android:id="@+id/vistaCantS"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeSmall"
                android:fontFamily="@font/arial"
                android:gravity="start"
                android:text="Cant S/cargo:" />

            <EditText
                android:id="@+id/editCantS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="@font/arial"
                android:inputType="numberDecimal"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeXSmall" />

        </LinearLayout>


        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout1"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="10dp"
            app:alignContent="center"
            app:alignItems="center"
            app:flexDirection="row"
            app:flexWrap='wrap'
            app:justifyContent="center">
            <Button android:id="@+id/btnGuarda"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_25sdp"
                android:text="Guarda"
                android:textSize="@dimen/textSizeTiny"
                android:textStyle="bold"
                android:textColor="@drawable/white_text_button"
                android:paddingHorizontal="5dp"
                android:background="@drawable/button_green"
                android:fontFamily="@font/arial"
                />
        </com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

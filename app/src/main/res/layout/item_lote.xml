<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/vistaLote"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            android:fontFamily="monospace"
            android:text="Lote:IDH0C00"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeXSmall"
            android:layout_marginLeft="@dimen/_5sdp"
            android:typeface="monospace" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end"
            android:layout_marginRight="15dp">



            <EditText
                android:id="@+id/vistaCantdi"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginRight="@dimen/_15sdp"
                android:fontFamily="@font/arial"
                android:text="0"
                android:textSize="@dimen/textSizeXSmall"

                android:textColor="@color/black"
                />

            <Button
                android:id="@+id/btnMas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Agregar"
                android:textColor="@drawable/white_text_button"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/button_green"                            android:fontFamily="@font/arial"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
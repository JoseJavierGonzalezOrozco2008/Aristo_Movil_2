<?xml version="1.0" encoding="utf-8"?>
    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_10sdp">
            <TextView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:text="Fecha Inicial:"
                android:textColor="@color/black"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/textSizeSmall"
                android:layout_marginLeft="@dimen/_7sdp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/viaj_feini"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeSmall"
                android:backgroundTint="@color/aristo_azul"
                android:fontFamily="@font/arial"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"
                android:lines="1">
            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_10sdp">
            <TextView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:text="Fecha Fin:"
                android:layout_marginLeft="@dimen/_7sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/textSizeSmall"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/viaj_fefin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeSmall"
                android:backgroundTint="@color/aristo_azul"
                android:fontFamily="@font/arial"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"
                android:lines="1">
            </EditText>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_10sdp">
            <TextView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:text="Ruta:"
                android:textColor="@color/black"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/textSizeSmall"
                android:layout_marginLeft="@dimen/_7sdp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/viaj_ruta"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeSmall"
                android:backgroundTint="@color/aristo_azul"
                android:fontFamily="@font/arial"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"
                android:lines="1">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_10sdp">
            <TextView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:text="Cliente:"
                android:textColor="@color/black"
                android:fontFamily="@font/arial"
                android:layout_marginLeft="@dimen/_7sdp"
                android:textSize="@dimen/textSizeSmall"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/viaj_cliente"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeSmall"
                android:backgroundTint="@color/aristo_azul"
                android:fontFamily="@font/arial"
                android:textColor="@color/black"
                android:layout_marginHorizontal="10dp"
                android:lines="1">
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_10sdp">
            <TextView
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:text="Â¿Directo?:"
                android:textColor="@color/black"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/textSizeSmall"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_7sdp"
                />

            <RadioGroup
                android:id="@+id/viaj_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="10dp"
                app:alignContent="center"
                app:alignItems="center"
                app:flexDirection="row"
                app:flexWrap='wrap'
                app:justifyContent="space_around">

                <RadioButton
                    android:id="@+id/viaj_si"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:text="Si"
                    android:textSize="@dimen/textSizeSmall" />

                <RadioButton
                    android:id="@+id/viaj_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:text="No"
                    android:textSize="@dimen/textSizeSmall" />

                <RadioButton
                    android:id="@+id/viaj_todos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:text="Todos"
                    android:textSize="@dimen/textSizeSmall" />

            </RadioGroup>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15sdp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_height="wrap_content">

            <Button android:id="@+id/btnCerrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cerrar"
                android:textColor="@drawable/white_text_button"
                android:fontFamily="@font/arial"
                android:background="@drawable/button_red"
                android:outlineSpotShadowColor="@color/white"
                android:textSize="@dimen/textSizeSmall" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_5sdp"
            android:gravity="right">

            <Button android:id="@+id/btnFiltra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filtrar"
                android:background="@drawable/button_casiagotado"
                android:textColor="@drawable/white_text_button"
                android:outlineSpotShadowColor="@color/white"
                android:textSize="@dimen/textSizeSmall"/>
        </LinearLayout>
    </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

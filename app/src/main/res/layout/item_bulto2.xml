<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout android:id="@+id/ViewDocumento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/venta_shape"
        android:padding="10dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtBultoFolio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/arial"
                android:text="Folio"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeXSmall" />

            <TextView
                android:id="@+id/txtBultoPiezas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtBultoUsuario"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_toEndOf="@+id/txtBultoUsuario"
                android:fontFamily="@font/arial"
                android:text="Piezas"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeXSmall" />

            <TextView
                android:id="@+id/txtBultoRenglones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtBultoUsuario"
                android:layout_alignParentStart="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/arial"
                android:text="Renglones"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeXSmall" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearBulto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                >
                <TextView
                    android:id="@+id/txtBultoEstatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial"
                    android:text="Estatus"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeXSmall" />

                <TextView
                    android:id="@+id/txtBultoUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial"
                    android:text="Usuario"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeXSmall" />
            </LinearLayout>

        </LinearLayout>
        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap='wrap'
            app:alignContent="center"
            app:flexDirection="row"
            app:alignItems="center"
            app:justifyContent="space_around"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="10dp">
            <Button
                android:id="@+id/btnBultoImprimir"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_verdesecundario"
                android:text="Imprime"
                android:textColor="@drawable/white_text_button"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/textSizeTiny"
                android:layout_marginTop="@dimen/_5sdp" />

            <Button
                android:id="@+id/btnBultoBaja"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_colordiferencias"
                android:paddingHorizontal="5dp"
                android:text="Baja a Captura"
                android:textColor="@drawable/white_text_button"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/textSizeTiny"
                android:layout_marginTop="@dimen/_5sdp" />

            <Button
                android:id="@+id/btnBultoVer"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_blue600"
                android:fontFamily="@font/arial"
                android:textColor="@drawable/white_text_button"
                android:text="Ver"
                android:textSize="@dimen/textSizeTiny"
                android:layout_marginTop="@dimen/_5sdp" />
        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>
</LinearLayout>
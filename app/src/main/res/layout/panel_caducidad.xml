<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/Mensaje_layout_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:gravity="center"
        android:background="@drawable/filtros_shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content">

                <Button android:id="@+id/btnRSCaducidadGuardar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@drawable/white_text_button"
                    android:text="Guardar"
                    android:background="@drawable/button_green"                            android:fontFamily="@font/arial"
                    android:outlineSpotShadowColor="@color/white"
                    android:textSize="@dimen/textSizeSmall" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:gravity="right">

                <Button android:id="@+id/btnRSCaducidadCerrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cerrar"
                    android:fontFamily="@font/arial"
                    android:textColor="@drawable/white_text_button"
                    android:background="@drawable/button_red"
                    android:outlineSpotShadowColor="@color/white"
                    android:textSize="@dimen/textSizeSmall" />
            </LinearLayout>
        </LinearLayout>

        <TextView android:id="@+id/txtRSProducto"
            android:text="Producto"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeSmall" />

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/linearRSCaducidadLoteCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap='wrap'
            app:alignContent="center"
            app:flexDirection="row"
            app:alignItems="center"
            app:justifyContent="space_around"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial"
                android:text="Lote:"
                android:textSize="@dimen/textSizeSmall"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/editRSCaducidadLote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/textSizeSmall"
                android:inputType="textPersonName"
                android:textColor="@color/black"
                android:backgroundTint="@color/aristo_azul" />

            <TextView
                android:id="@+id/txtRSCaducidadCantCad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial"
                android:text="Cant :"
                android:textSize="@dimen/textSizeSmall"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/editRSCaducidadCantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/textSizeSmall"
                android:inputType="numberSigned"
                android:textColor="@color/black"
                android:backgroundTint="@color/aristo_azul" />
        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/linearRSCaducidadFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap='wrap'
            app:alignContent="center"
            app:flexDirection="row"
            app:alignItems="center"
            app:justifyContent="space_around"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="10dp">
            <TextView
                android:id="@+id/txtRSCaducidadCantEnv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial"
                android:text="Cant \nEnv:"
                android:visibility="gone"
                android:textSize="@dimen/textSizeSmall"
                android:textColor="@color/colorNegro" />

            <EditText
                android:id="@+id/editRSCaducidadCantEnv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="3"
                android:enabled="false"
                android:inputType="numberSigned"
                android:visibility="gone"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/textSizeSmall"
                android:textColor="@color/black"
                android:backgroundTint="@color/aristo_azul" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/textSizeSmall"
                android:text="Fecha:"
                android:textColor="@color/colorNegro" />

            <EditText
                android:id="@+id/editRSCaducidadFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:editable="false"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/textSizeSmall"
                android:inputType="date"
                android:textColor="@color/black"
                android:backgroundTint="@color/aristo_azul"/>

            <Switch
                android:id="@+id/switchRSCaducidadCalendario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/textSizeSmall"
                android:text="Calendario"
                tools:ignore="UseSwitchCompatOrMaterialXml" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial"
                android:text=""
                android:textSize="@dimen/textSizeSmall"
                android:textColor="@color/black"/>
        </com.google.android.flexbox.FlexboxLayout>

        <LinearLayout
            android:id="@+id/linearRSCaducidadTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/txtRSCaducidadTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/arial"
                android:foregroundTint="#000000"
                android:gravity="center"
                android:text="Titulo"
                android:textColor="@color/colorNegro"
                android:textSize="@dimen/textSizeSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TableLayout android:id="@+id/tablaRSCaducidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

            <ImageButton
                android:id="@+id/btnCerrarRenglon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/ic_notification_clear_all" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:paddingVertical="10dp"
                android:paddingHorizontal="10dp">

                <TextView
                    android:id="@+id/txtCodigoRenglon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial"
                    android:text="Código"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textSize="@dimen/textSizeSmall"
                    android:textColor="@color/black"/>

                <TextView android:id="@+id/txtProductoRenglon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Producto"
                    android:fontFamily="@font/arial"
                    android:textSize="@dimen/textSizeSmall"
                    android:textAlignment="center"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txtCantPedidaRenglon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="Cantidad pedida"
                    android:textSize="@dimen/textSizeSmall"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txtCantIngresadaRenglon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial"
                    android:text="Cantidad ingresada"
                    android:textSize="@dimen/textSizeSmall"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txtUbicacionRenglon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial"
                    android:text="Ubicación"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textSize="@dimen/textSizeSmall"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txtDispoRenglon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="Disponibilidad"
                    android:textSize="@dimen/textSizeSmall"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txtAnaquelRenglon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="Anaquel"
                    android:textSize="@dimen/textSizeSmall"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txtNotasREnglon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial"
                    android:text="Notas"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textSize="@dimen/textSizeSmall"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txtRenglonRenglon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial"
                    android:text="Renglón"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textSize="@dimen/textSizeSmall"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txtRenglonesRenglon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial"
                    android:text="Renglones"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textSize="@dimen/textSizeSmall"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txtDocumentoRenglon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="Documento"
                    android:textSize="@dimen/textSizeSmall"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/txtPedidoRenglon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="Pedido"
                    android:textSize="@dimen/textSizeSmall"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/btnUbicacionDialogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape"
                    android:textSize="@dimen/textSizeSmall"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingHorizontal="5dp"
                    android:fontFamily="@font/arial"
                    android:text="Ubicacion"
                    android:backgroundTint="@color/fondoRecibe"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/textSizeSmall"
                android:gravity="end"
                android:text="Marca:"/>

            <CheckBox
                android:id="@+id/datoMarca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/textSizeSmall"
                android:gravity="end"
                android:text="Linea:"/>

            <CheckBox
                android:id="@+id/datoLinea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/textSizeSmall"
                android:gravity="end"
                android:text="Clave Sat:"/>

            <CheckBox
                android:id="@+id/datoSat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/textSizeSmall"
                android:gravity="end"
                android:text="Sustancia:"/>

            <CheckBox
                android:id="@+id/datoSustancia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/arial"
                android:textSize="@dimen/textSizeSmall"
                android:gravity="end"
                android:text="Divisa:"/>

            <CheckBox
                android:id="@+id/datoDivisa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end" >

        <Button android:id="@+id/btnCerrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeMedium"
            android:text="Cerrar"
            android:fontFamily="@font/arial"
            android:background="@drawable/button_shape"
            android:layout_marginEnd="5dp"/>

        <Button android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeMedium"
            android:text="Guardar"
            android:fontFamily="@font/arial"
            android:background="@drawable/button_shape"
            android:layout_marginEnd="5dp"/>
    </LinearLayout>

</LinearLayout>
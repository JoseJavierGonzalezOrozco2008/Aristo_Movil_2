<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Acrividades.Carrito">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout android:id="@+id/conteo_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include
                android:id="@+id/toolbar2"
                layout="@layout/toolbar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/toolbar2"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="0.3"
                        >
                        <EditText
                            android:id="@+id/vntaCodigo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="7500..."
                            android:textSize="@dimen/textSizeSmall"
                            android:inputType="text"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="0.7"
                        >
                        <ImageButton
                            android:id="@+id/vntaEnter"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/select"
                            android:layout_weight="0.3"
                            android:visibility="gone"
                            />

                        <Button
                            android:id="@+id/vntaF1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:textSize="@dimen/textSizeTiny"
                            android:text="F1"
                            />
                        <Button
                            android:id="@+id/vntaF2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.3"
                            android:textSize="@dimen/textSizeTiny"
                            android:text="F2" />
                        <Button
                            android:id="@+id/vntaF3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="F3"
                            android:textSize="@dimen/textSizeTiny"
                            android:layout_weight="0.3"
                            android:visibility="gone"
                            />
                        <Button
                            android:id="@+id/vntaF11"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="F11"
                            android:textSize="@dimen/textSizeTiny"
                            android:layout_weight="0.3"
                            android:visibility="gone"
                            />
                        <TextView
                            android:id="@+id/vntaTotal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="$100.00"
                            android:gravity="center|end"
                            android:textColor="@color/aristo_amarillo"
                            android:textSize="@dimen/_18sdp"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:textStyle="bold"
                            />
                    </LinearLayout>

                </LinearLayout>

                <ListView
                    android:id="@+id/vntacarrito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/vntaSinRegistros"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Sin artÃ­culos"
                    android:gravity="center"
                    android:textColor="@color/colorNegro"
                    android:textSize="@dimen/_22sdp"
                    android:textStyle="bold"
                    />

            </LinearLayout>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="0dp">

            <include
                android:id="@+id/Mensaje"
                layout="@layout/mensaje" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
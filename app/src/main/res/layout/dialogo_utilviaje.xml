<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fondoListas">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/utAsigna"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:text="Asigna"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="@drawable/white_text_button"
                android:background="@drawable/button_green"
                android:fontFamily="@font/arial"
                android:layout_gravity="right" />
            <TextView
                android:id="@+id/selecionado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/arial"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeLarge"/>
            <ListView
                android:id="@+id/lista_selec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@android:color/darker_gray"
                android:dividerHeight="0.5dp"/>

            <TextView
                android:id="@+id/emptyListado"
                android:text="Lista vacia"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone"
                android:gravity="center"
                android:fontFamily="@font/arial"
                android:textColor="@color/black"
                android:textSize="@dimen/textSizeLarge"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout android:id="@+id/ViewDocumento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/venta_shape"
        android:padding="10dp"
        android:layout_margin="5dp" >

        <TextView
            android:id="@+id/txtViajFolio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:fontFamily="monospace"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />

        <LinearLayout
            android:id="@+id/linearBulto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

            <Button
                android:id="@+id/btnBultoVer"
                android:fontFamily="@font/arial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:textColor="@drawable/white_text_button"
                android:background="@drawable/button_blue600"
                android:text="@string/viaj_btn01"
                android:textSize="@dimen/textSizeTiny" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
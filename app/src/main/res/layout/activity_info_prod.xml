<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                android:id="@+id/toolbar2"
                layout="@layout/toolbar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/nrepoTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial"
                android:textColor="@color/black"
                android:text="Informacion del Producto"
                android:textAlignment="center"
                android:textSize="@dimen/textSizeMedium"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Codigo de prod:"
                    android:layout_weight="0.2"
                    android:fontFamily="@font/arial"
                    android:gravity="end"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/colorNegro"
                    android:textSize="@dimen/textSizeSmall"
                    />

                <EditText
                    android:id="@+id/infoEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:ems="8"
                    android:inputType="text"
                    android:lines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeSmall" />

                <ImageButton
                    android:id="@+id/btnBuscaProd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="5dp"
                    android:src="@drawable/bars_code" />

            </LinearLayout>
            <Button android:id="@+id/btnProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Busca Producto"
                android:layout_gravity="center"
                android:fontFamily="@font/arial"
                android:background="@drawable/button_shape"
                android:paddingHorizontal="10dp"
                android:layout_marginHorizontal="10dp"
                android:textSize="@dimen/textSizeSmall"/>

            <TextView
                android:id="@+id/webPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:id="@+id/webImagen" />
                    <TextView
                        android:id="@+id/webHtml"
                        android:fontFamily="monospace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSizeSmall" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp">

            <include
                android:id="@+id/Mensaje"
                layout="@layout/mensaje" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
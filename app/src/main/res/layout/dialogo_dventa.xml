<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/dvtaProducto"
        android:layout_width="match_parent"
        android:textSize="24dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/dvtaCantorig"
        android:layout_width="match_parent"
        android:textSize="24dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_15sdp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dvtaCantcapt"
            android:layout_width="wrap_content"
            android:textSize="24dp"
            android:text="Cant. Nueva:"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>
        <EditText
            android:padding="5dp"
            android:id="@+id/dvtaCantidad"
            android:textSize="24dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:layout_marginRight="@dimen/_5sdp"
            android:inputType="numberDecimal"
            android:lines="1"/>

        <ImageButton android:id="@+id/btnMasmas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/add_black"
            android:background="@drawable/button_shape"
            android:layout_weight="0.02"
            android:layout_marginRight="@dimen/_5sdp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"/>
        <ImageButton android:id="@+id/btnMenor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/minus_black"
            android:background="@drawable/button_shape"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="0.02"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33">
            <Button
                android:id="@+id/btnRegresar"
                android:text="Regresar"
                android:textSize="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_white"
                android:background="@drawable/button_shape"
                android:paddingHorizontal="5dp"
                android:layout_weight="0.33"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/btnBorrar"
                android:text="Borrar"
                android:textSize="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_white"
                android:background="@drawable/button_shape"
                android:paddingHorizontal="5dp"
                android:layout_weight="0.33"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/btnGuardar"
                android:text="Guardar"
                android:textSize="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_white"
                android:background="@drawable/button_shape"
                android:paddingHorizontal="5dp"
                android:layout_weight="0.33"
                android:layout_marginRight="5dp"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/dvtaProducto"
        android:layout_width="match_parent"
        android:textSize="@dimen/textSizeMedium"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"/>
    <RadioGroup android:id="@+id/dvtaRadioGrup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <RadioButton android:id="@+id/dvtaRadioCant"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/arial"
            android:text="Cantidad"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeXSmall"
            />

        <RadioButton android:id="@+id/dvtaRadioDesc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/arial"
            android:text="Descuento"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeXSmall"
            />

        <RadioButton android:id="@+id/dvtaRadioPrec"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/arial"
            android:text="Cambio Precio"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeXSmall"
            />
    </RadioGroup>
    <TextView
        android:id="@+id/dvtaCantorig"
        android:layout_width="match_parent"
        android:textSize="@dimen/textSizeSmall"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_height="wrap_content"
        android:textAlignment="center"/>
    <LinearLayout
        android:id="@+id/dvtaLyCant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dvtaCantcapt"
            android:layout_width="@dimen/_105sdp"
            android:layout_height="wrap_content"
            android:text="Cant. Nueva:"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeSmall" />
        <EditText
            android:padding="5dp"
            android:id="@+id/dvtaCantidad"
            android:textSize="@dimen/textSizeSmall"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:lines="1"/>

        <ImageButton android:id="@+id/btnMasmas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_7sdp"
            android:src="@drawable/add_black"
            android:background="@drawable/button_shape"
            android:layout_weight="0.05"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"/>
        <ImageButton android:id="@+id/btnMenor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_7sdp"
            android:src="@drawable/minus_black"
            android:background="@drawable/button_shape"
            android:layout_weight="0.05"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dvtaLyDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textSize="@dimen/textSizeSmall"
            android:text="Descuento:"
            android:layout_width="@dimen/_105sdp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"/>
        <EditText
            android:padding="5dp"
            android:id="@+id/dvtaDesc"
            android:textSize="@dimen/textSizeSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:lines="1"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/dvtaLyPrecio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/_105sdp"
            android:textSize="@dimen/textSizeSmall"
            android:text="Precio Nuevo:"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"/>
        <EditText
            android:padding="5dp"
            android:id="@+id/dvtaPrecioN"
            android:textSize="@dimen/textSizeSmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="numberDecimal"
            android:lines="1"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.33">
            <Button
                android:id="@+id/btnRegresar"
                android:text="Regresar"
                android:textSize="@dimen/textSizeSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_white"
                android:textColor="@drawable/white_text_button"
                android:paddingHorizontal="5dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/btnBorrar"
                android:text="Borrar"
                android:textSize="@dimen/textSizeSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_white"
                android:textColor="@drawable/white_text_button"
                android:paddingHorizontal="5dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"/>
            <Button
                android:id="@+id/btnGuardar"
                android:text="Guardar"
                android:textSize="@dimen/textSizeSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete_white"
                android:textColor="@drawable/white_text_button"
                android:paddingHorizontal="5dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>


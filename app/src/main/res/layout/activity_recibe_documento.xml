<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout android:id="@+id/recibe_documento_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <include
                    android:id="@+id/toolbar"
                    layout="@layout/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/toolbar"
                    android:orientation="vertical">

                    <LinearLayout android:id="@+id/LinearRecibeDocumentoInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#252B48"
                        android:padding="5dp"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView android:id="@+id/txtRecibeDocumentoCodigo"
                                android:layout_width="0dp"
                                android:layout_weight="0.6"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arial"
                                android:text=""
                                android:contentDescription="Código"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textSizeMedium"
                                android:textIsSelectable="true"/>

                            <TextView android:id="@+id/txtRecibeDocumentoCantidad"
                                android:layout_width="0dp"
                                android:layout_weight="0.4"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arial"
                                android:text=""
                                android:textColor="@color/white"
                                android:textAlignment="textEnd"
                                android:textSize="@dimen/textSizeMedium"/>
                        </LinearLayout>

                        <TextView android:id="@+id/txtRecibeDocumentoProducto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arial"
                            android:text=""
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:textSize="@dimen/textSizeMedium"/>

                        <TextView android:id="@+id/txtRecibedocumentoUbicacion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arial"
                            android:text=""
                            android:textColor="@color/white"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:textAlignment="center"
                            android:textSize="@dimen/textSizexSmallx2"/>

                        <TextView android:id="@+id/txtRecibeDocumentoNotas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arial"
                            android:text=""
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:textSize="@dimen/textSizeMedium"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/acomodo_renglon"
                        android:orientation="vertical">

                        <LinearLayout android:id="@+id/linearRecibeDocumentoRenglon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:padding="0dp">

                            <ImageButton
                                android:id="@+id/btnRecibeDocumentoAnterior"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.2"
                                android:background="@color/colorLigthGray"
                                android:contentDescription="Anterior"
                                android:paddingVertical="5dp"
                                android:src="@drawable/left_arrow"
                                tools:ignore="TouchTargetSizeCheck" />

                            <TextView android:id="@+id/txtrecibeDocumentoRenglon"
                                android:layout_width="0dp"
                                android:layout_weight="0.6"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/arial"
                                android:text="Renglón"
                                android:textColor="@color/grisMedio"
                                android:background="@color/white"
                                android:textAlignment="center"
                                android:textSize="@dimen/textSizeMedium"/>

                            <ImageButton android:id="@+id/btnRecibeDocumentoSiguiente"
                                android:layout_width="0dp"
                                android:layout_weight="0.2"
                                android:layout_height="wrap_content"
                                android:src="@drawable/right_arrow"
                                android:contentDescription="Siguiente"
                                android:background="@color/colorLigthGray"
                                android:paddingVertical="5dp"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout android:id="@+id/linearRecibeDocumentoResult"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#445069"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView android:id="@+id/txtRecibeDocumentoProductoResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arial"
                            android:text="Bubbalo 5.1 gr Platano brillante"
                            android:textColor="@color/white"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:textStyle="bold"
                            android:textSize="@dimen/textSizeSmall" />

                        <TextView android:id="@+id/txtRecibeDocumentoCodigoResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arial"
                            android:text="Código: 000000000000"
                            android:textColor="@color/white"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:textSize="@dimen/textSizeSmall" />
                        <com.google.android.flexbox.FlexboxLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingVertical="10dp"
                            app:alignContent="center"
                            app:alignItems="center"
                            app:flexDirection="row"
                            app:flexWrap='wrap'
                            app:justifyContent="space_around"
                            android:layout_marginTop="@dimen/_14sdp">
                            <TextView android:id="@+id/txtRecibeDocumentoPiezasResult"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_weight="0.25"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arial"
                                android:text="Pzas: 10"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textSizeSmall" />

                            <TextView android:id="@+id/txtRecibeDocumentoDisponibleResult"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_weight="0.25"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arial"
                                android:text="Disp: 10"
                                android:textColor="@color/white"
                                android:textAlignment="center"
                                android:textSize="@dimen/textSizeSmall" />

                            <TextView android:id="@+id/txtRecibeDocumentoExistenciaResult"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_weight="0.25"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arial"
                                android:text="Fisi: 10"
                                android:textColor="@color/white"
                                android:textAlignment="center"
                                android:textSize="@dimen/textSizeSmall" />

                            <TextView android:id="@+id/txtRecibeDocumentoSurtidoResult"
                                android:layout_width="@dimen/_70sdp"
                                android:layout_weight="0.25"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arial"
                                android:text="Surt: 10"
                                android:textColor="@color/white"
                                android:textAlignment="textEnd"
                                android:textSize="@dimen/textSizeSmall"/>
                        </com.google.android.flexbox.FlexboxLayout>

                        <TextView android:id="@+id/txtExtra1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arial"
                            android:text=""
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:textSize="@dimen/textSizeSmall"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp">
                        <com.google.android.flexbox.FlexboxLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:flexWrap='wrap'
                            app:alignContent="center"
                            app:flexDirection="row"
                            app:alignItems="center"
                            app:justifyContent="space_around"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingVertical="10dp">

                            <Button
                                android:id="@+id/btnRecibeDocumentoCodigo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_casiagotado"
                                android:text="@string/producto"
                                android:textColor="@drawable/white_text_button"
                                android:textSize="@dimen/textSizeXSmall"
                                tools:ignore="TextSizeCheck" />

                            <EditText
                                android:id="@+id/editRecibeDocumentoCodigo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ems="8"
                                android:fontFamily="@font/arial"
                                android:inputType="numberDecimal"
                                android:lines="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeXSmall"
                                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                            <ImageButton
                                android:id="@+id/btnRecibeDocumentoBarcode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_shape"
                                android:backgroundTint="@color/zxing_custom_possible_result_points"
                                android:contentDescription="Código de barras"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="5dp"
                                android:src="@drawable/bars_code"
                                tools:ignore="TouchTargetSizeCheck" />
                        </com.google.android.flexbox.FlexboxLayout>

                    </LinearLayout>
                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:flexWrap='wrap'
                        app:alignContent="center"
                        app:flexDirection="row"
                        app:alignItems="center"
                        app:justifyContent="space_around"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingVertical="10dp">


                    </com.google.android.flexbox.FlexboxLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingHorizontal="10dp">

                            <TextView
                                android:layout_width="@dimen/_85sdp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeSmall"
                                android:fontFamily="@font/arial"
                                android:text="Cargo: "/>

                            <EditText
                                android:id="@+id/editRecibeDocumentoCargo"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arial"
                                android:inputType="numberDecimal"
                                android:lines="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeXSmall"
                                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="10dp"
                            android:gravity="center">

                            <TextView android:id="@+id/txtRecibedocumentoSinCargo"
                                android:layout_width="@dimen/_85sdp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeSmall"
                                android:fontFamily="@font/arial"
                                android:text="Sin cargo: "/>

                            <EditText
                                android:id="@+id/editRecibeDocumentoSinCargo"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arial"
                                android:inputType="numberDecimal"
                                android:lines="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeXSmall"
                                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout android:id="@+id/linearRecibeDocumentoCaducadoDañado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingHorizontal="10dp">

                            <TextView
                                android:layout_width="@dimen/_85sdp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeSmall"
                                android:fontFamily="@font/arial"
                                android:text="Caducado: "/>

                            <EditText
                                android:id="@+id/editRecibeDocumentoCaducado"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arial"
                                android:inputType="numberDecimal"
                                android:lines="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeXSmall"
                                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="10dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="@dimen/_85sdp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeSmall"
                                android:fontFamily="@font/arial"
                                android:text="Dañado: "/>

                            <EditText
                                android:id="@+id/editRecibeDocumentoDañado"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arial"
                                android:inputType="numberDecimal"
                                android:lines="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeSmall"
                                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout android:id="@+id/linearRecibeDocumentoFaltanteNoPedido"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:paddingHorizontal="10dp">

                            <TextView
                                android:layout_width="@dimen/_85sdp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeSmall"
                                android:fontFamily="@font/arial"
                                android:text="Faltante: "/>

                            <EditText
                                android:id="@+id/editRecibeDocumentoFaltante"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arial"
                                android:inputType="numberDecimal"
                                android:lines="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeXSmall"
                                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/lynopedido"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="10dp"
                            android:gravity="center">

                            <TextView
                                android:layout_width="@dimen/_85sdp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeSmall"
                                android:fontFamily="@font/arial"
                                android:text="No. pedido: "/>

                            <EditText
                                android:id="@+id/editRecibeDocumentoNoPedido"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/arial"
                                android:inputType="numberDecimal"
                                android:lines="1"
                                android:textColor="@color/black"
                                android:textSize="@dimen/textSizeXSmall"
                                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                        </LinearLayout>
                    </LinearLayout>
                    <com.google.android.flexbox.FlexboxLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:flexWrap='wrap'
                        app:alignContent="center"
                        app:flexDirection="row"
                        app:alignItems="center"
                        app:justifyContent="space_around"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingVertical="10dp">
                        <TextView android:id="@+id/txtRecibeDocumentoBultosCostos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSizeSmall"
                            android:fontFamily="@font/arial"
                            android:text="Bultos/Costos: "/>

                        <TextView android:id="@+id/txtRecibeDocumentoDivisaProducto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSizeXSmall"
                            android:fontFamily="@font/arial"/>

                        <EditText
                            android:id="@+id/editRecibeDocumentoBultosCostos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ems="8"
                            android:fontFamily="@font/arial"
                            android:inputType="numberDecimal"
                            android:lines="1"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSizeXSmall"
                            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                        <TextView android:id="@+id/txtRecibeDocumentoDivisaTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/textSizeXSmall"
                            android:fontFamily="@font/arial"/>
                    </com.google.android.flexbox.FlexboxLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout android:id="@+id/linearRecibeDocumentoCierraContenedor"
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginBottom="@dimen/_34sdp"
                            android:paddingHorizontal="10dp">

                            <Button android:id="@+id/btnRecibeDocumentoCierraContenedor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cierra_contenedor"
                                android:textSize="@dimen/textSizeTiny"
                                android:textColor="@color/white"
                                android:fontFamily="@font/arial"
                                android:textStyle="bold"
                                android:paddingHorizontal="5dp"
                                android:backgroundTint="@color/design_default_color_error"
                                android:background="@drawable/button_shape"/>
                        </LinearLayout>

                        <include
                            android:id="@+id/RSCaducidad"
                            layout="@layout/panel_caducidad" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.5"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingHorizontal="10dp"
                            android:gravity="center">

                            <Button android:id="@+id/btnRecibeDocumentoFinalizaFactura"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/finaliza_factura"
                                android:textSize="@dimen/textSizeTiny"
                                android:textColor="@color/white"
                                android:fontFamily="@font/arial"
                                android:paddingHorizontal="5dp"
                                android:textStyle="bold"
                                android:background="@drawable/button_shape"
                                android:backgroundTint="@color/fondoError"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="0dp"
                android:visibility="invisible">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="0dp">

                <include
                    android:id="@+id/Mensaje"
                    layout="@layout/mensaje" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:paddingBottom="0dp"
        android:background="@drawable/card">
        <ImageView android:id="@+id/adapter_renglones_img"
            android:layout_width="@dimen/_50sdp"
            android:layout_weight="0.2"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/logoaristo"
            android:adjustViewBounds="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:padding="5dp">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView android:id="@+id/adapter_renglones_codigo"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial"
                        android:textStyle="bold"
                        android:textColor="@color/disponible"
                        android:textSize="@dimen/textSizeSmall"
                        android:text="CÃ³digo: 123456789"/>

                    <TextView android:id="@+id/adapter_renglones_dispoible"
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial"
                        android:text="Disp: 10"
                        android:textStyle="bold"
                        android:textSize="@dimen/textSizeXSmall"/>

                    <TextView android:id="@+id/adapter_renglones_cantidad"
                        android:layout_width="0dp"
                        android:layout_weight="0.25"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial"
                        android:textAlignment="textEnd"
                        android:text="Cant: 10"
                        android:textColor="@color/aristo_amarillo"
                        android:textSize="@dimen/textSizeXSmall"/>
                </LinearLayout>

                <TextView android:id="@+id/adapter_renglones_producto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:fontFamily="@font/arial"
                    android:textColor="@color/disponible"
                    android:textSize="@dimen/textSizeXSmall"
                    android:textAlignment="center"
                    android:text="LT 33X12.50R20 HAIDA HD878X"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_7sdp">

                    <TextView android:id="@+id/adapter_renglones_precio"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial"
                        android:textColor="@color/aristo_amarillo"
                        android:textSize="@dimen/textSizeSmall"
                        android:text="Precio: $1000.00"
                        android:layout_gravity="center"/>

                    <TextView android:id="@+id/adapter_renglones_total"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial"
                        android:textColor="@color/aristo_amarillo"
                        android:textAlignment="textEnd"
                        android:textSize="@dimen/textSizeSmall"
                        android:text="Total: $1000.00"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/agregar_shape"
            android:orientation="horizontal">

            <Button android:id="@+id/adapteR_renglones_eliminar"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:fontFamily="@font/arial"
                android:text="Eliminar"
                android:textColor="@drawable/white_text_button"
                android:background="@drawable/button_red"
                android:textSize="@dimen/_13sdp" />

            <ImageButton android:id="@+id/adapteR_renglones_menos"
                android:layout_width="0dp"
                android:layout_weight="0.10"
                android:layout_height="match_parent"
                android:src="@drawable/minus"
                android:background="@color/white"
                android:layout_marginVertical="2dp"
                android:outlineSpotShadowColor="@color/white"/>

            <EditText android:id="@+id/adapter_renglones_input"
                android:layout_width="0dp"
                android:layout_weight="0.20"
                android:layout_height="match_parent"
                android:ems="3"
                android:text="0"
                android:textAlignment="center"
                android:textSize="@dimen/textSizeSmall"
                android:textStyle="bold"
                android:lines="1"
                android:inputType="number"
                android:textColor="@color/aristo_amarillo"
                android:backgroundTint="@color/aristo_amarillo"/>

            <ImageButton android:id="@+id/adapter_renglones_mas"
                android:layout_width="0dp"
                android:layout_weight="0.10"
                android:layout_height="match_parent"
                android:src="@drawable/add"
                android:background="@color/white"
                android:layout_marginVertical="2dp"
                android:layout_marginRight="2dp"
                android:outlineSpotShadowColor="@color/white"/>

            <Button android:id="@+id/adapter_renglones_guardar"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="match_parent"
                android:textColor="@drawable/white_text_button"
                android:text="Guardar"
                android:textSize="@dimen/_13sdp"
                android:background="@drawable/button_green"
                android:fontFamily="@font/arial"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
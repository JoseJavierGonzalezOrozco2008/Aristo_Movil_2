<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:paddingBottom="0dp"
            android:background="@drawable/card">
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                app:flexWrap='wrap'
                app:alignContent="center"
                app:flexDirection="row"
                app:alignItems="center"
                app:justifyContent="space_between"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingVertical="10dp">
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="@dimen/_50sdp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                app:flexWrap='wrap'
                app:alignContent="center"
                app:flexDirection="row"
                app:alignItems="center"
                app:justifyContent="space_around"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingVertical="10dp">
                <ImageView android:id="@+id/adapter_renglones_img"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_weight="0.05"
                    android:layout_height="@dimen/_35sdp"
                    android:src="@drawable/logoaristo"
                    android:adjustViewBounds="true"/>
            </com.google.android.flexbox.FlexboxLayout>
            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="@dimen/_101sdp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                app:flexWrap='wrap'
                app:alignContent="center"
                app:flexDirection="row"
                app:alignItems="center"
                app:justifyContent="space_around"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingVertical="10dp">
                <Button
                    android:id="@+id/adapter_renglones_guardar"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.20"
                    android:background="@drawable/button_green"
                    android:fontFamily="@font/arial"
                    android:text="Guardar"
                    android:textColor="@drawable/white_text_button"
                    android:textSize="@dimen/_13sdp" />

            </com.google.android.flexbox.FlexboxLayout>


            </com.google.android.flexbox.FlexboxLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:gravity="center">



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.95"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:gravity="center">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView android:id="@+id/adapter_renglones_codigo"
                            android:layout_width="0dp"
                            android:layout_weight="0.3"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arial"
                            android:textStyle="bold"
                            android:textColor="@color/disponible"
                            android:textSize="@dimen/textSizeXSmall"
                            android:text="CÃ³digo: 123456789"/>

                        <TextView android:id="@+id/adapter_renglones_producto"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/arial"
                            android:textColor="@color/disponible"
                            android:textSize="@dimen/textSizeXSmall"
                            android:textAlignment="center"
                            android:text="LT 33X12.50R20 HAIDA HD878X"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center">


                        <TextView android:id="@+id/adapter_renglones_dispoible"
                            android:layout_width="0dp"
                            android:layout_weight="0.15"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arial"
                            android:text="Disp: 10"
                            android:textStyle="bold"
                            android:textSize="@dimen/textSizeXSmall"/>


                        <TextView android:id="@+id/adapter_renglones_cantidad"
                            android:layout_width="0dp"
                            android:layout_weight="0.15"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arial"
                            android:textColor="@color/aristo_amarillo"
                            android:textSize="@dimen/textSizeXSmall"
                            android:text="Cant: 10 "/>

                        <TextView android:id="@+id/adapter_renglones_precio"
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arial"
                            android:textColor="@color/aristo_amarillo"
                            android:textSize="@dimen/textSizeXSmall"
                            android:text="Precio: $1000.00"/>

                        <TextView android:id="@+id/adapter_renglones_total"
                            android:layout_width="0dp"
                            android:layout_weight="0.25"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arial"
                            android:textColor="@color/aristo_amarillo"
                            android:textSize="@dimen/textSizeXSmall"
                            android:textStyle="bold"
                            android:text="Total: $1000.00"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="0dp"
                            android:background="@drawable/agregar_shape"
                            android:orientation="horizontal"
                            android:paddingLeft="2dp">

                            <ImageButton android:id="@+id/adapteR_renglones_menos"
                                android:layout_width="0dp"
                                android:layout_weight="0.33"
                                android:layout_height="match_parent"
                                android:src="@drawable/minus"
                                android:background="@drawable/agregar_button_left_shape"
                                android:layout_marginVertical="2dp"
                                android:outlineSpotShadowColor="@color/white"/>

                            <EditText android:id="@+id/adapter_renglones_input"
                                android:layout_width="0dp"
                                android:layout_weight="0.33"
                                android:layout_height="match_parent"
                                android:ems="3"
                                android:text="0"
                                android:textAlignment="center"
                                android:textSize="@dimen/textSizeSmall"
                                android:textStyle="bold"
                                android:lines="1"
                                android:inputType="number"
                                android:textColor="@color/aristo_amarillo"
                                android:backgroundTint="@color/aristo_amarillo"/>

                            <ImageButton android:id="@+id/adapter_renglones_mas"
                                android:layout_width="0dp"
                                android:layout_weight="0.33"
                                android:layout_height="match_parent"
                                android:src="@drawable/add"
                                android:background="@drawable/agregar_button_right_shape"
                                android:layout_marginVertical="2dp"
                                android:layout_marginRight="2dp"
                                android:outlineSpotShadowColor="@color/white"/>

                            <Button android:id="@+id/adapteR_renglones_eliminar"
                                android:layout_width="0dp"
                                android:layout_weight="0.25"
                                android:layout_height="match_parent"
                                android:text="Eliminar"
                                android:fontFamily="@font/arial"
                                android:backgroundTint="@color/fondoError"
                                android:textSize="@dimen/textSizeSmall"
                                android:background="@drawable/eliminar_button_shape"
                                android:textColor="@color/white"
                                android:visibility="gone"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</androidx.core.widget.NestedScrollView>
